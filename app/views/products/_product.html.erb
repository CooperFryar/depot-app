<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1 text-3xl">Title:</strong>
    <%= product.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-3xl">Description:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-3xl">Image url:</strong>
    <%= product.image_url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-3xl">Price:</strong>
    <%= product.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product", product, class: "rounded-lg py-3 px-5 bg-gray-100 dark:bg-gray-600 inline-block font-medium" %>
    <%= link_to 'Edit this product', edit_product_path(product), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 dark:bg-gray-600 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
